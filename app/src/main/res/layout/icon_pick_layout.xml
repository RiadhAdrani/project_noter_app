<?xml version="1.0" encoding="utf-8"?>

        <!--
        XML file describing Icon Pick Dialog menu
        -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background= "@color/beau_blue_light">

    <!--
    Prompt text
    -->
    <TextView
        android:id="@+id/choose_icon_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_icon"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal"
        style="@style/black_standard_16sp"/>

    <!--
    Recycler View displaying the list of the icons available
    for the user to pick from
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/icon_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal" />

    <!--
    Cancel Button
    -->
    <Button
        android:id="@+id/icon_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/cancel"
        style="@style/button_light_style"/>

</LinearLayout>