<?xml version="1.0" encoding="utf-8"?>

        <!--
        XML file describing Icon Template
        for the icon pick layout
        -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="50dp"
    android:layout_height="60dp"
    android:layout_margin="2dp"
    android:background="@color/orange_yellow_crayola">

        <!--
        Icon drawable
        -->
    <ImageView
        android:layout_margin="4dp"
        android:id="@+id/icon_frame"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="4dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_small"
        />

        <!--
       Icon name
        -->
    <TextView
        android:id="@+id/icon_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="4dp"
        android:text="@string/icon_name_placeholder"
        style="@style/black_standard_8sp_single_Line"/>

</LinearLayout>