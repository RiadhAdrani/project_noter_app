<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beau_blue_lighter"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/sort_checklist"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_sort_0"
        android:background="@drawable/ripple_beau_blue_lighter_to_dark_5dp"
        android:elevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/checklist_recycler"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/checklist_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sort_checklist"
        app:layout_constraintBottom_toTopOf="@id/add_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="4dp"/>

    <EditText
        android:id="@+id/add_item"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/checklist_recycler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="@id/add_item_button"
        android:hint="@string/checkListItemHint"/>

    <ImageButton
        android:id="@+id/add_item_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_add_0"
        android:layout_marginTop="4dp"
        android:scaleType="fitCenter"
        android:background="@drawable/icon_ripple_default"
        app:layout_constraintTop_toBottomOf="@id/checklist_recycler"
        app:layout_constraintLeft_toRightOf="@id/add_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>