<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:layout_margin="2dp"
    android:elevation="2dp"
    style="@style/ripple_beau_blue_lighter_to_darker_15dp"
    >

    <CheckBox
        android:id="@+id/CLIC_checkBox"
        android:scaleX="1.375"
        android:scaleY="1.375"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/CLIC_item_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/checkListItemHint"
        android:paddingHorizontal="4dp"
        android:gravity="center_vertical"
        style="@style/black_standard_16sp"
        android:maxLength="75"
        android:maxLines="2"
        android:minLines="2"
        />

    <ImageView
        android:id="@+id/CLIC_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:scaleType="center"
        android:paddingHorizontal="8dp"
        style="@style/ripple_beau_blue_lighter_to_darker_5dp"
        android:src="@drawable/ic_trash_can_0"/>

</LinearLayout>