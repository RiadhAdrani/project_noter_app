<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/beau_blue_dark</item>
        <item name="colorPrimaryDark">@color/beau_blue_darker</item>
        <item name="colorAccent">@color/beau_blue_light</item>
    </style>


    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- /////////////////////////////////////////////////////////////////////////////////////// -->
    <!--                                       STYLES                                            -->
    <!-- /////////////////////////////////////////////////////////////////////////////////////// -->

    <style name="cardStyle">
        <item name="backgroundColor">@color/green_persian</item>
    </style>

    <style name="mainActivityFloatingActionButton">
        <!-- Style for Floating Action bar in the categoryActivity -->
        <item name="background">@color/orange_yellow_crayola</item>
        <item name="fabCustomSize">60dp</item>
    </style>

    <!-- /////////////////////////////////////////////////////////////////////////////////////// -->
    <!--                                     TEXT STYLES                                         -->
    <!-- /////////////////////////////////////////////////////////////////////////////////////// -->

    <style name="black_standard_20sp">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="black_standard_18sp">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="black_standard_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="white_standard_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="black_standard_12sp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="black_standard_14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="darker_grey_italic_12sp_two_lines">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="black_standard_8sp">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="black_standard_8sp_single_Line">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="singleLine">true</item>
    </style>

    <!-- /////////////////////////////////////////////////////////////////////////////////////// -->
    <!--                                BUTTON AND CLICKABLE STYLES                              -->
    <!-- /////////////////////////////////////////////////////////////////////////////////////// -->

    <style name="ripple_beau_blue_lighter_to_darker_0dp">
        <item name="android:background">@drawable/ripple_beau_blue_lighter_to_dark_0dp</item>
    </style>

    <style name="ripple_beau_blue_lighter_to_darker_5dp">
        <item name="android:background">@drawable/ripple_beau_blue_lighter_to_dark_5dp</item>
    </style>

    <style name="ripple_beau_blue_lighter_to_darker_15dp">
        <item name="android:background">@drawable/ripple_beau_blue_lighter_to_dark_15dp</item>
    </style>

    <style name="ripple_beau_blue_light_to_darker_15dp">
        <item name="android:background">@drawable/ripple_beau_blue_light_to_dark_15dp</item>
    </style>

    <style name="button_default_style">
        <item name="android:background">@drawable/button_ripple_default</item>
    </style>

    <style name="button_dark_style">
        <item name="android:background">@drawable/button_ripple_dark</item>

    </style>

    <style name="button_light_style">
        <item name="android:background">@drawable/button_ripple_light</item>
    </style>

    <style name="icon_default_style">
        <item name="android:background">@drawable/icon_ripple_default</item>
    </style>

    <style name="category_card_default_style">
        <item name="android:background">@drawable/category_ripple_default</item>
    </style>


</resources>