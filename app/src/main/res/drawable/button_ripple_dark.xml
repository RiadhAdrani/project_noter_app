<?xml version="1.0" encoding="utf-8"?>

<!-- on click effect
     better be darker/lighter than the background -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/beau_blue_dark"
    >

    <!-- on hold click effect
         better be different from the on click effect -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/beau_blue_darker" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Default style -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="@color/beau_blue"
                android:startColor="@color/beau_blue"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</ripple>